                                        <a class="dropdown-item" href="#"><i class="fa fa-user"></i> Just me</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                }
                <!-- UserPage -->
                <!--- Post -->

                @foreach (var item in model.posts)
                {
                    if (item.Author != null && item.Author.ID == currentUser.ID)
                        @await Html.PartialAsync("_UserPost", item)
                    }
                <!-- Post -->
            </div>

            <div class="col-md-3">
                <!-- To be filled -->
